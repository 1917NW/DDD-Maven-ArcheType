    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <modules>
    <module id="${symbol_dollar}{rootArtifactId}-facade" dir="__rootArtifactId__-facade" name="${symbol_dollar}{rootArtifactId}-facade">
      <fileSets>
